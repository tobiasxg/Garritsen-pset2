<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tobias.stories.WordsActivity">

    <TextView
        android:text="Fill in the words to complete the story!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="word(s) left"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/wordsView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Name"
        android:textAlignment="center"
        android:ems="10"
        android:layout_below="@+id/wordsView"
        android:layout_centerHorizontal="true"
        android:id="@+id/inputWord"/>

    <Button
        android:text="Fill in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputWord"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:id="@+id/wordButton" />


</RelativeLayout>